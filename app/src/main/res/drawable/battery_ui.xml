<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Battery Body Fill -->



    <item android:left="1dp" android:right="1dp" android:top="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="2dp"  />
            <solid android:color="?attr/colorSecondary" />
            <size android:width="18dp" android:height="10dp" />
        </shape>
    </item>



    <item android:id="@+id/charge_bar" android:gravity="center_vertical" android:left="2dp" android:width="16dp" android:height="8dp">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorPrimary" />
            <corners android:radius="2dp"/>
        </shape>
    </item>

    <!-- Battery Head -->
    <item android:left="18dp" android:gravity="center_vertical" android:width="2dp" android:height="4dp">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorSecondary" />
            <corners android:topRightRadius="1dp"  android:bottomRightRadius="1dp"/>
        </shape>
    </item>


</layer-list>